<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiltControl.MainPage">

    <Grid RowDefinitions="0.1*, 0.8*, 0.1*">
        <Grid Grid.Row="0" RowDefinitions="*,*" ColumnDefinitions="*,*,*,*" Padding="10" BackgroundColor="{StaticResource Gray950}">
            
            <Label Grid.Row="0" Grid.Column="0" Text="X-sensor:" FontSize="Small" FontAttributes="Bold"/>
            <Label Grid.Row="0" Grid.Column="1" x:Name="SensorXLabel" Text="0.00" FontSize="Small"/>

            <Label Grid.Row="0" Grid.Column="2" Text="Y-sensor:" FontSize="Small" FontAttributes="Bold"/>
            <Label Grid.Row="0" Grid.Column="3" x:Name="SensorYLabel" Text="0.00" FontSize="Small"/>
            
            <Label Grid.Row="1" Grid.Column="0" Text="X coord: " FontSize="Small" FontAttributes="Bold" />
            <Label Grid.Row="1" Grid.Column="1" x:Name="CoordXLabel" Text="0.00" FontSize="Small" />
            <Label Grid.Row="1" Grid.Column="3" x:Name="CoordYLabel" Text="0.00" FontSize="Small" />
            
            <Label Grid.Row="1" Grid.Column="2" Text="Y coord: " FontSize="Small" FontAttributes="Bold" />
        </Grid>
        
        <AbsoluteLayout Grid.Row="1" Background="{StaticResource Gray900}">

            <BoxView x:Name="Disc"
             BackgroundColor="Transparent"
               Color="{StaticResource Tertiary}"
               CornerRadius="70"
               AbsoluteLayout.LayoutBounds="0.5 , 0.5, 50, 50"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        </AbsoluteLayout>
        <FlexLayout Grid.Row="2" Wrap="Wrap" JustifyContent="SpaceAround" AlignContent="Center"  BackgroundColor="{StaticResource Gray950}">

            <ImageButton x:Name="ToggleButton" Clicked="ToggleSensor" Source="power.png" VerticalOptions="Center" WidthRequest="50" Padding="10" CornerRadius="555" HeightRequest="50" BackgroundColor="{StaticResource Danger}"/> 
            <Button x:Name="SlowButton" Clicked="SpeedDown" Text="&lt;" FontSize="25" FontAttributes="Bold" CornerRadius="30" VerticalOptions="Center"  BackgroundColor="{StaticResource Gray600}"/>
            <Label x:Name="SpeedLabel" Text="0.02" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold" FontSize="15" Margin="-5,0"/>
            <Button x:Name="FastButton" Clicked="SpeedUp" Text="&gt;" FontSize="25" FontAttributes="Bold" CornerRadius="999" VerticalOptions="Center" BackgroundColor="{StaticResource Gray600}"/>
            <ImageButton x:Name="InvertButton" Clicked="InvertValues" WidthRequest="50" HeightRequest="50" CornerRadius="25" Source="swap.png" BackgroundColor="{StaticResource Danger}"/>
        </FlexLayout>
    </Grid>

</ContentPage>
